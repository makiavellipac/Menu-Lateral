{
  "name": "plantilla-webpack",
  "version": "1.0.0",
  "description": "\"Plantilla de webpack y typescript con react\"",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config webpack.dev.config.ts",
    "build": "webpack --config webpack.prod.config.ts",
    "format": "eslint . --ext .ts,.js,.tsx,.jsx",
    "format:fix": "eslint . --ext .ts,.js,.tsx,.jsx --fix && prettier --write **/*.{ts,tsx,js,jsx,json}",
    "prepare": "husky install"
  },
  "keywords": [
    "React",
    "Webpack",
    "Typescript"
  ],
  "author": "Santiago Gonzalez",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "husky": "7.0.1",
    "lint-staged": "11.0.0",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "style-loader": "^3.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "dotenv": "^10.0.0",
    "eslint-webpack-plugin": "^2.5.4",
    "fork-ts-checker-webpack-plugin": "^6.2.12",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.0.0",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "postcss-cssnext": "^3.1.0",
    "terser-webpack-plugin": "^5.1.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack": "^5.41.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write **/*.{ts,tsx,js,jsx,json}",
      "eslint . --ext .ts,.js,.tsx,.jsx"
    ]
  }
}
